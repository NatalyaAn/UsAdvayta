<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="./bootstrap.php"
         colors="true"
         syntaxCheck="true"
         verbose="true">
    <testsuite name="Slim Bootstrap Test Suite">
        <directory>./</directory>
    </testsuite>
    <filter>
        <whitelist>
            <directory suffix=".php">../src</directory>
        </whitelist>
    </filter>
    <log type="coverage-text" target="php://stdout" />
</phpunit>
